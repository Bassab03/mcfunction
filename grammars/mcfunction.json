{
	"scopeName": "source.mcfunction",
	"name": "mcfunction",
	"fileTypes": ["mcfunction"],
	"patterns": [
		{
			"match": "(@[parse])(\\[(?:[\\w_]+=[\\w_]*,)*[\\w_]+=[\\w_]*\\])?",
			"captures": {
				"1": {
					"name": "target"
				},
				"2": {
					"name": "argument",
					"patterns": [
						{
							"match": "([\\w_]+)=([\\w_]*)",
							"captures": {
								"1": {
									"name": "name"
								},
								"2": {
									"name": "value"
								}
							}
						}
					]
				}
			},
			"name": "selector"
		},
		{
			"include": "#nbt-compound"
		},
		{
			"match": "^(?:advancement|blockdata|clear|clone|defaultgamemode|difficulty|effect|enchant|entitydata|execute|fill|function|gamemode|gamerule|give|kill|locate|particle|playsound|recipe|reload|replaceitem|say|scoreboard|setblock|setworldspawn|spreadplayers|stats|stopsound|summon|teleport|tellraw|tell|testforblocks|testforblock|testfor|time|title|toggledownfall|tp|trigger|weather|worldborder|xp)",
			"name": "command"
		},
		{
			"match": "#.*",
			"name": "comment"
		},
		{
			"match": "(?: (?:(?:~(?:-?\\d+(?:\\.\\d+)?)?)|(?:-?\\d+(?:\\.\\d+)?))){3}",
			"name": "coord"
		},
		{
			"match": "^/",
			"name": "error.fslash"
		}
	],
	"repository": {
		"nbt-array": {
			"begin": "\\[",
			"end": "\\]",
			"name": "array",
			"patterns": [
				{
					"include": "#nbt-value"
				}
			]
		},
		"nbt-compound": {
			"begin": "{",
			"end": "}",
			"name": "compound",
			"patterns": [
				{
					"include": "#nbt-key"
				},
				{
					"begin": ":[\\t_]*",
					"end": "(?=[\\t ]*}|,)",
					"patterns": [
						{
							"include": "#nbt-value"
						}
					]
				}
			]
		},
		"nbt-key": {
			"match": "(\".*?\")|[\\w_]+",
			"captures": {
				"1": {
					"patterns": [
						{
							"match": "\\\\(?:[\"\\\\/bfnrt])|(?:u[0-9a-fA-F]{4})"
						}
					]
				}
			},
			"name": "key"
		},
		"nbt-value": {
			"patterns": [
				{
					"include": "#nbt-string"
				},
				{
					"include": "#nbt-number"
				},
				{
					"include": "#nbt-compound"
				},
				{
					"include": "#nbt-array"
				}
			]
		},
		"nbt-string": {
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"match": "\\\\(?:[\"\\\\/bfnrt])|(?:u[0-9a-fA-F]{4})"
				}
			],
			"name": "value.string"
		},
		"nbt-number": {
			"match": "-?\\d+(?:\\.\\d+)?[bfdl]?",
			"name": "value.number"
		}
	}
}
