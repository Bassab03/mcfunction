{
	"scopeName": "source.mcfunction13",
	"name": "Minecraft Function 1.13+",
	"fileTypes": ["mcfunction"],
	"patterns": [
		{
			"name": "argument",
			"begin": "(@[parse])\\[",
			"beginCaptures": {
				"1": {
					"name": "selector"
				}
			},
			"end": "\\]",
			"patterns": [
				{
					"match": "([\\w_]+)(?==)",
					"captures": {
						"1": {
							"name": "name"
						}
					}
				},
				{
					"begin": "(?==)",
					"end": "(?=,|\\])",
					"name": "value",
					"patterns": [
						{
							"begin": "(?==)",
							"end": "(?<==)",
							"name": "equals"
						},
						{
							"begin": "\"",
							"end": "\"",
							"patterns": [
								{
									"match": "\\\\(?:[\"\\\\/bfnrt])|(?:u[0-9a-fA-F]{4})"
								}
							]
						},
						{
							"match": "[\\w_]"
						},
						{
							"include": "#nbt-compound"
						}
					]
				}
			]
		},
		{
			"match": "@[parse]",
			"name": "selector"
		},
		{
			"include": "#nbt-compound"
		},
		{
			"match": "(?:^|(?<=run ))(?:datapack|locatebiome|schedule|spectate|teammsg|tm|loot|forceload|advancement|clear|clone|data|defaultgamemode|difficulty|effect|execute|experience|fill|function|gamemode|gamerule|give|kill|locate|msg|particle|playsound|recipe|reload|replaceitem|say|scoreboard|tag|team|seed|setblock|setworldspawn|spreadplayers|stopsound|summon|teleport|tellraw|tell|time|title|tp|trigger|w|weather|worldborder|xp|bossbar|me|spawnpoint)\\b",
			"name": "command"
		},
		{
			"match": "^#.*",
			"name": "comment"
		},
		{
			"match": "(?<=(spreadplayers)|(worldborder center)|(tp @[espra] [~\\d] [~\\d] [~\\d])|(teleport @[espra] [~\\d] [~\\d] [~\\d])|(tp [~\\d] [~\\d] [~\\d])|(rotated)|(forceload remove)|(forceload query)|(teleport [~\\d] [~\\d] [~\\d]))(?: (?:[~^]-?(?:\\d*\\.)?\\d*|-?(?:\\d*\\.)?\\d+)){2}|((?<=forceload add [~\\d] [~\\d] [~\\d] )[~\\d])",
			"name": "coordc"
		},
		{
			"match": "(?: (?:[~^]-?(?:\\d*\\.)?\\d*|-?(?:\\d*\\.)?\\d+)){3}",
			"name": "coord"
		},
		{
			"match": "(^/|(?<=run )/)",
			"name": "error"
		},
		{
			"match": "\\[(?:(?:(\\w+)=(\\w+)),)*(?:(\\w+)=(\\w+))\\]",
			"name": "state",
			"captures": {
				"1": {
					"name": "name"
				},
				"3": {
					"name": "name"
				},
				"2": {
					"name": "value"
				},
				"4": {
					"name": "value"
				}
			}
		},
		{
			"match": " -?(\\.*\\d+\\.*\\d*|true|false)(?= |$)",
			"name": "basicNumber"
		}
	],
	"repository": {
		"nbt-array": {
			"begin": "\\[",
			"end": "\\]",
			"name": "array.nbt",
			"patterns": [
				{
					"include": "#nbt-value"
				}
			]
		},
		"nbt-compound": {
			"begin": "{",
			"end": "}",
			"name": "compound.nbt",
			"patterns": [
				{
					"include": "#nbt-key-quoted"
				},
				{
					"include": "#nbt-key-unquoted"
				},
				{
					"begin": ":[\\t_]*",
					"end": "(?=[\\t ]*}|,)",
					"patterns": [
						{
							"include": "#nbt-value"
						}
					]
				}
			]
		},
		"nbt-key-quoted": {
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"match": "\\\\(?:[\"\\\\/bfnrt])|(?:u[0-9a-fA-F]{4})"
				}
			],
			"name": "key.nbt"
		},
		"nbt-key-unquoted": {
			"match": "[\\w_]+",
			"name": "key"
		},
		"nbt-value": {
			"patterns": [
				{
					"include": "#nbt-string"
				},
				{
					"include": "#nbt-compound"
				},
				{
					"include": "#nbt-number"
				},
				{
					"include": "#nbt-array"
				},
				{
					"include": "#nbt-boolean"
				}
			]
		},
		"nbt-string": {
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"match": "\\\\(?:[\"\\\\/bfnrt])|(?:u[0-9a-fA-F]{4})"
				}
			],
			"name": "string.nbt"
		},
		"nbt-number": {
			"match": "-?\\d+(?:\\.\\d+)?[bfdls]?(?=\\s?[}\\],])",
			"name": "number.nbt"
		},
		"nbt-boolean": {
			"match": "(true|false)(?=\\s?[}\\],])",
			"name": "boolean.nbt"
		}
	}
}
