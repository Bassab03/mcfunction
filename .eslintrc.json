{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "requireConfigFile": false
    },
    "parser": "@babel/eslint-parser",
    "rules": {
        "no-inner-declarations": ["off"],
        "no-global-assign": ["off"],
        "no-control-regex": ["off"],
        "no-empty": ["warn"],
        "indent": [
            "error",
            2,
            {
              "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": ["warn"],
        "no-var": ["error"],
        "curly": ["error"],
        "no-unneeded-ternary": ["error"],
        "one-var": ["error",{
          "separateRequires": false,
          "var": "consecutive",
          "let": "consecutive",
          "const": "consecutive"
        }],
        "operator-assignment": ["error"],
        "prefer-const": ["error"]
    }
}
